generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      Int                  @id @default(autoincrement())
  username                String               @unique @db.VarChar(50)
  email                   String?              @unique @db.VarChar(100)
  passwordHash            String?              @map("password_hash") @db.VarChar(255)
  fullName                String?              @map("full_name") @db.VarChar(100)
  avatarUrl               String?              @map("avatar_url") @db.VarChar(255)
  role                    UserRole             @default(user)
  createdAt               DateTime             @default(now()) @map("created_at")
  updatedAt               DateTime             @updatedAt @map("updated_at")
  lastSeen                DateTime?            @map("last_seen")
  isOnline                Boolean              @default(false) @map("is_online")
  facebookId              String?              @unique @map("facebook_id")
  provider                String?              @default("email") @db.VarChar(50)
  comments                Comment[]
  conversationMemberships ConversationMember[] @relation("UserConversationMembers")
  conversationsCreated    Conversation[]       @relation("ConversationCreator")
  followRequestsSent      FollowRequest[]      @relation("FollowRequestsSent")
  followRequestsReceived  FollowRequest[]      @relation("FollowRequestsReceived")
  following               Follow[]             @relation("Following")
  followers               Follow[]             @relation("Followers")
  messageEditHistory      MessageEditHistory[] @relation("MessageEditHistory")
  chatMessageStates       MessageState[]       @relation("ChatMessageStates")
  sentMessages            Message[]            @relation("ChatMessagesSent")
  sentNotifications       Notification[]       @relation("ActorNotifications")
  receivedNotifications   Notification[]       @relation("UserNotifications")
  pinnedMessages          PinnedMessage[]
  postViews               PostView[]           @relation("UserPostViews")
  posts                   Post[]
  reactions               Reaction[]
  reposts                 Repost[]
  saved_posts             SavedPost[]
  privacySettings         UserPrivacySetting?

  @@index([role])
  @@index([isOnline])
  @@index([createdAt])
  @@index([lastSeen])
  @@map("users")
}

model UserPrivacySetting {
  userId               Int           @id @map("user_id")
  whoCanMessage        PrivacyOption @default(everyone) @map("who_can_message")
  whoCanTagMe          PrivacyOption @default(everyone) @map("who_can_tag_me")
  showOnlineStatus     Boolean       @default(true) @map("show_online_status")
  createdAt            DateTime      @default(now()) @map("created_at")
  updatedAt            DateTime      @updatedAt @map("updated_at")
  isPrivate            Boolean       @default(false) @map("is_private")
  whoCanFindByUsername PrivacyOption @default(everyone) @map("who_can_find_by_username")
  user                 User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isPrivate])
  @@index([whoCanMessage])
  @@index([whoCanTagMe])
  @@index([whoCanFindByUsername])
  @@index([showOnlineStatus])
  @@map("user_privacy_settings")
}

model Post {
  id            Int           @id @default(autoincrement())
  userId        Int           @map("user_id")
  content       String?
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  deletedAt     DateTime?     @map("deleted_at")
  whoCanComment PrivacyOption @default(everyone)
  whoCanSee     PrivacyOption @default(everyone)
  comments      Comment[]
  media         PostMedia[]
  views         PostView[]    @relation("PostViews")
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  reposts       Repost[]
  savedPosts    SavedPost[]

  @@index([userId])
  @@index([createdAt])
  @@index([deletedAt])
  @@map("posts")
}

model PostMedia {
  id        Int      @id @default(autoincrement())
  postId    Int      @map("post_id")
  mediaUrl  String   @map("media_url") @db.VarChar(500)
  mediaType String   @default("image") @map("media_type") @db.VarChar(50)
  createdAt DateTime @default(now()) @map("created_at")
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([mediaType])
  @@map("post_media")
}

model PostView {
  id       Int      @id @default(autoincrement())
  postId   Int?     @map("post_id")
  userId   Int      @map("user_id")
  viewedAt DateTime @default(now()) @map("viewed_at")
  repostId Int?     @map("repost_id")
  post     Post?    @relation("PostViews", fields: [postId], references: [id], onDelete: Cascade)
  repost   Repost?  @relation(fields: [repostId], references: [id], onDelete: Cascade)
  user     User     @relation("UserPostViews", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId], name: "postId_userId", map: "postId_userId_unique")
  @@unique([repostId, userId], name: "repostId_userId", map: "repostId_userId_unique")
  @@index([postId])
  @@index([repostId])
  @@index([userId])
  @@index([viewedAt])
  @@map("post_views")
}

model Comment {
  id        Int       @id @default(autoincrement())
  postId    Int?      @map("post_id")
  userId    Int       @map("user_id")
  parentId  Int?      @map("parent_id")
  content   String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  repostId  Int?      @map("repost_id")
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")
  post      Post?     @relation(fields: [postId], references: [id], onDelete: Cascade)
  repost    Repost?   @relation(fields: [repostId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([postId, parentId])
  @@index([postId, createdAt])
  @@index([repostId, parentId])
  @@index([repostId, createdAt])
  @@index([postId])
  @@index([repostId])
  @@index([userId])
  @@index([parentId])
  @@index([createdAt])
  @@index([deletedAt])
  @@map("comments")
}

model Reaction {
  id           Int          @id @default(autoincrement())
  userId       Int          @map("user_id")
  targetType   TargetType   @map("target_type")
  targetId     Int          @map("target_id")
  reactionType ReactionType @map("reaction_type")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, targetType, targetId])
  @@index([targetType, targetId])
  @@index([reactionType])
  @@index([createdAt])
  @@map("reactions")
}

model Repost {
  id        Int        @id @default(autoincrement())
  userId    Int        @map("user_id")
  postId    Int        @map("post_id")
  content   String?
  createdAt DateTime   @default(now()) @map("created_at")
  deletedAt DateTime?  @map("deleted_at")
  comments  Comment[]
  views     PostView[]
  post      Post       @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@index([createdAt])
  @@map("reposts")
}

model SavedPost {
  userId  Int      @map("user_id")
  postId  Int      @map("post_id")
  savedAt DateTime @default(now()) @map("saved_at")
  post    Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, postId])
  @@index([userId])
  @@index([savedAt])
  @@map("saved_posts")
}

model Notification {
  id         Int                    @id @default(autoincrement())
  userId     Int                    @map("user_id")
  actorId    Int                    @map("actor_id")
  type       NotificationType
  targetType NotificationTargetType @map("target_type")
  targetId   Int?                   @map("target_id")
  createdAt  DateTime               @default(now()) @map("created_at")
  updatedAt  DateTime               @default(now()) @map("updated_at")
  metadata   Json?
  groupKey   String?                @map("group_key")
  actor      User                   @relation("ActorNotifications", fields: [actorId], references: [id], onDelete: Cascade)
  user       User                   @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type, targetType, targetId, groupKey], map: "unique_notif_key")
  @@index([userId])
  @@index([actorId])
  @@index([createdAt])
  @@map("notifications")
}

model Follow {
  followerId  Int      @map("follower_id")
  followingId Int      @map("following_id")
  createdAt   DateTime @default(now()) @map("created_at")
  follower    User     @relation("Following", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("Followers", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
  @@index([followingId, createdAt])
  @@index([followerId, createdAt])
  @@map("follows")
}

model FollowRequest {
  fromUserId Int
  toUserId   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  id         Int      @id @default(autoincrement())
  fromUser   User     @relation("FollowRequestsSent", fields: [fromUserId], references: [id])
  toUser     User     @relation("FollowRequestsReceived", fields: [toUserId], references: [id])

  @@unique([fromUserId, toUserId])
  @@index([toUserId])
  @@map("follow_requests")
}

model Conversation {
  id             Int                  @id @default(autoincrement())
  type           ConversationType     @default(DIRECT)
  name           String?              @db.VarChar(100)
  avatarUrl      String?              @map("avatar_url") @db.VarChar(255)
  createdBy      Int?                 @map("created_by")
  createdAt      DateTime             @default(now()) @map("created_at")
  updatedAt      DateTime             @updatedAt @map("updated_at")
  lastMessageAt  DateTime?            @map("last_message_at")
  members        ConversationMember[]
  creator        User?                @relation("ConversationCreator", fields: [createdBy], references: [id])
  messages       Message[]
  pinnedMessages PinnedMessage[]

  @@index([type])
  @@index([lastMessageAt])
  @@index([createdBy])
  @@map("conversations")
}

model ConversationMember {
  id             Int          @id @default(autoincrement())
  conversationId Int          @map("conversation_id")
  userId         Int          @map("user_id")
  role           MemberRole   @default(MEMBER)
  joinedAt       DateTime     @default(now()) @map("joined_at")
  leftAt         DateTime?    @map("left_at")
  lastReadAt     DateTime?    @map("last_read_at")
  isMuted        Boolean      @default(false) @map("is_muted")
  isPinned       Boolean      @default(false) @map("is_pinned")
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation("UserConversationMembers", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([userId])
  @@index([conversationId])
  @@index([lastReadAt])
  @@index([isPinned])
  @@index([userId, isPinned, lastReadAt])
  @@index([conversationId, leftAt])
  @@map("conversation_members")
}

model Message {
  id             Int                  @id @default(autoincrement())
  conversationId Int                  @map("conversation_id")
  senderId       Int?                 @map("sender_id")
  type           MessageType          @default(TEXT)
  content        String?
  mediaUrl       String?              @map("media_url") @db.VarChar(500)
  replyToId      Int?                 @map("reply_to_id")
  createdAt      DateTime             @default(now()) @map("created_at")
  updatedAt      DateTime             @updatedAt @map("updated_at")
  deletedAt      DateTime?            @map("deleted_at")
  isSystem       Boolean              @default(false) @map("is_system")
  isRecalled     Boolean              @default(false) @map("is_recalled")
  recalledAt     DateTime?            @map("recalled_at")
  fileSize       Int?                 @map("file_size")
  filename       String?              @map("filename") @db.VarChar(255)
  mediaType      String?              @map("media_type") @db.VarChar(100)
  editHistory    MessageEditHistory[]
  states         MessageState[]       @relation("ChatMessageStates")
  conversation   Conversation         @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  replyTo        Message?             @relation("MessageReplies", fields: [replyToId], references: [id])
  replies        Message[]            @relation("MessageReplies")
  sender         User?                @relation("ChatMessagesSent", fields: [senderId], references: [id], onDelete: Cascade)
  pinnedIn       PinnedMessage[]

  @@index([conversationId, createdAt])
  @@index([senderId])
  @@index([replyToId])
  @@index([deletedAt])
  @@index([type])
  @@index([conversationId, deletedAt])
  @@index([conversationId, isSystem])
  @@map("messages")
}

model MessageState {
  id        Int            @id @default(autoincrement())
  messageId Int            @map("message_id")
  userId    Int            @map("user_id")
  status    DeliveryStatus @default(SENT)
  createdAt DateTime       @default(now()) @map("created_at")
  updatedAt DateTime       @updatedAt @map("updated_at")
  message   Message        @relation("ChatMessageStates", fields: [messageId], references: [id], onDelete: Cascade)
  user      User           @relation("ChatMessageStates", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@index([userId])
  @@index([status])
  @@map("message_states")
}

model MessageEditHistory {
  id         Int      @id @default(autoincrement())
  messageId  Int      @map("message_id")
  oldContent String?  @map("old_content")
  newContent String   @map("new_content")
  editedBy   Int      @map("edited_by")
  editedAt   DateTime @default(now()) @map("edited_at")
  editor     User     @relation("MessageEditHistory", fields: [editedBy], references: [id], onDelete: Cascade)
  message    Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
  @@index([editedBy])
  @@index([editedAt])
  @@map("message_edit_history")
}

model PinnedMessage {
  id             Int          @id @default(autoincrement())
  conversationId Int          @map("conversation_id")
  messageId      Int          @map("message_id")
  pinnedById     Int          @map("pinned_by_id")
  pinnedAt       DateTime     @default(now()) @map("pinned_at")
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  message        Message      @relation(fields: [messageId], references: [id], onDelete: Cascade)
  pinnedBy       User         @relation(fields: [pinnedById], references: [id], onDelete: Cascade)

  @@unique([conversationId, messageId])
  @@index([conversationId, pinnedAt])
  @@index([pinnedById])
  @@map("pinned_messages")
}

enum UserRole {
  user
  admin
}

enum ReactionType {
  LIKE
  LOVE
  HAHA
  WOW
  SAD
  ANGRY
}

enum PrivacyOption {
  everyone
  followers
  nobody
}

enum TargetType {
  POST
  COMMENT
  REPOST
}

enum NotificationType {
  COMMENT
  FOLLOW
  MENTION
  REPOST
  REPLY
  FOLLOW_REQUEST
  REACTION
  FOLLOW_ACCEPTED
  FOLLOW_REJECTED
  MESSAGE
}

enum NotificationTargetType {
  POST
  COMMENT
  USER
  MESSAGE
  CONVERSATION
  REPOST
}

enum ConversationType {
  DIRECT
  GROUP
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  FILE
}

enum DeliveryStatus {
  SENT
  DELIVERED
  READ
}

enum MemberRole {
  ADMIN
  MEMBER
}
